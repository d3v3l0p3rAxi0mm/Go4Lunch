<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.RestaurantDetailsActivity">

    <ImageView
        android:id="@+id/resto_photo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/grey"
        android:contentDescription="@string/photo_du_restaurant" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floating_ok_btn"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="170dp"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:elevation="0dp"
        android:outlineAmbientShadowColor="@color/white"
        android:outlineSpotShadowColor="@color/white"
        app:rippleColor="@color/white"
        android:src="@drawable/baseline_done_24"
        app:fabSize="auto"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:focusable="true"
        android:contentDescription="@string/ok" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="200dp"
        android:background="@color/DarkPrimary">

        <TextView
            android:id="@+id/resto_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="100dp"
            android:textColor="#ffff"
            android:textStyle="bold|italic"
            android:layout_marginStart="5dp"
            android:layout_marginTop="7dp"
            android:text="" />

        <androidx.appcompat.widget.AppCompatRatingBar

            android:id="@+id/rating_bar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="30dp"
            android:numStars="5"
            android:text=""
            android:theme="@style/RatingBarRestaurant" />

        <TextView
            android:id="@+id/resto_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="100dp"
            android:textColor="#ffff"
            android:textStyle="bold|italic"
            android:layout_marginStart="5dp"
            android:layout_marginTop="27dp"
            android:text="" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/action_btn"
        android:layout_marginTop="270dp"
        android:layout_width="match_parent"
        android:layout_height="70dp">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/call_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#00FFFFFF"
            android:drawableTop="@drawable/fui_ic_phone_white_24dp"
            android:drawableTint="@color/DarkPrimary"
            android:text="@string/call"
            android:textAlignment="center"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/star_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#00FFFFFF"
            android:drawableTop="@drawable/baseline_stars_24"
            android:drawableTint="@color/DarkPrimary"
            android:text="@string/like"
            android:textAlignment="center"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/web_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#00FFFFFF"
            android:drawableTop="@drawable/baseline_public_24"
            android:drawableTint="@color/DarkPrimary"
            android:text="@string/website"
            android:textAlignment="center"
            android:textStyle="bold"
            tools:ignore="RtlCompat" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/workmates_recyclerView"
        android:layout_margin="10dp"
        android:layout_below="@+id/action_btn"
        android:layout_height="match_parent"
        android:layout_width="match_parent" />

</RelativeLayout>