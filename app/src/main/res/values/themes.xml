<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Go4Lunch" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/Primary</item>
        <item name="colorSecondary">@color/LightPrimary</item>
        <!-- Primary brand color. -->
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/DarkPrimary</item>
        <!-- Customize your theme here. -->

        <item name="drawerArrowStyle">@style/DrawerIcon</item>

        <item name="colorControlNormal">@color/white</item>
    </style>
    <style name="RatingBarRestaurantRV" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">#FFEB3B</item>
    </style>
    <style name="RatingBarRestaurant" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">#FFEB3B</item>
    </style>
    <style name="RatingBarRestaurantBig" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">#FFEB3B</item>
    </style>

</resources>